// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Service model for therapy services
model Service {
  id            String   @id @default(cuid())
  title         String
  slug          String   @unique
  icon          String
  tagline       String
  description   String
  bestFor       String   // JSON array stored as string
  howItWorks    String
  sessionLength String
  format        String   // "online" | "in-person" | "both"
  frequency     String
  pricing       Int
  ctaText       String
  order         Int
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// Home page content model
model HomeContent {
  id              String   @id @default(cuid())
  section         String   @unique // "hero", "about", "cta"
  title           String?
  subtitle        String?
  description     String?
  buttonText      String?
  buttonLink      String?
  imageUrl        String?
  content         String?  // JSON content stored as string
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// Site settings model
model SiteSetting {
  id          String   @id @default(cuid())
  key         String   @unique
  value       String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Admin users model
model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String   // Hashed password
  name      String
  role      String   @default("admin") // "admin" | "superadmin"
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Blog posts model (for future use)
model BlogPost {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  excerpt     String
  content     String
  coverImage  String?
  author      String
  category    String
  tags        String   // JSON array stored as string
  isPublished Boolean  @default(false)
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Booking model (for future use)
model Booking {
  id              String   @id @default(cuid())
  serviceId       String
  clientName      String
  clientEmail     String
  clientPhone     String
  preferredDate   DateTime
  preferredTime   String
  sessionType     String   // "online" | "in-person"
  status          String   @default("pending") // "pending" | "confirmed" | "cancelled"
  notes           String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
